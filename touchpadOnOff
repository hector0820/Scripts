#!/bin/bash
touch=$(xinput list-props 11 | sed -n "2p" | sed -e "s/\s//g" -e "s/^.*://")
if [ 1 == "$touch" ]
then
	xinput disable 11
	notify-send "💻 Información del Touchpad 🖱️" "El touchpad es a desactivado 🪤"
else
	xinput enable 11
	notify-send "💻 Información del Touchpad 🖱️" E"l touchpad esta activado 🖲️"
fi
