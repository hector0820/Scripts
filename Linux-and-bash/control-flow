#!/usr/bin/env bash

question="si"
fruits=(apple banana pear pinaple)

while [ "$question" == "si" ];
do
    echo ${fruits[@]}
    for fruit in ${fruits[@]};
    do echo "I love eating healthy snacks like this $fruit";done
    read -p "Â¿quieres continuar? " question \
        && [ "$question" == "si" ] \
        && read -p "Dime una fruta " fruta \
        && fruits+=($fruta) \
        || break
done
