#!/bin/bash
# Touchpad on - off

touch=$(xinput list-props 12 | sed -n "2p" | sed -e "s/\s//g" -e "s/^.*://")

if [ 1 == "$touch" ]
then
	xinput disable 12
	notify-send "ğŸ’» InformaciÃ³n del Touchpad ğŸ–±ï¸" "El touchpad es a desactivado ğŸª¤"
else
	xinput enable 12
	notify-send "ğŸ’» InformaciÃ³n del Touchpad ğŸ–±ï¸" E"l touchpad esta activado ğŸ–²ï¸"
fi
